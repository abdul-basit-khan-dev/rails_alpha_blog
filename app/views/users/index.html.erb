<h1 align="center">All alpha Bloggers</h1>
<div class="d-flex justify-content-center mb-2">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 offset-md-4 col-sm-4 offset-sm-4 col-lg-4 offset-lg-4 mb-2">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.name, user_path(user) %>
        </li>
        <li>
          <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
        </li>
      </div>
    </div>
  </ul>
<% end %>
<div class="d-flex justify-content-center mb-2">
  <%= will_paginate %>
</div>