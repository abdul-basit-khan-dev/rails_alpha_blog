<div class="container">
  <p id="notice"><%= notice %></p>

<h1> List of Articles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <div class="card bg-light p-5 mb-2">
          <h2 class="card-title ">
            <%= simple_format(article.title) %>
          </h2>
          <p class="card-text">
            <%= simple_format(article.body) %>
          </p>
          <div>
            <span>
              <%= link_to 'Show', article, class:"btn btn-sm btn-info card-link"%>
            </span>
            <span>
            <%= link_to 'Edit', edit_article_path(article),
                                class:"btn btn-sm btn-warning card-link" %>
            </span>
            <span>
              <%= link_to 'Destroy', article, method: :delete,
                                data: { confirm: 'Are you sure?' },
                                class:"btn btn-sm btn-danger card-link" %>
            </span>
        </div>
    </div>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class:"btn btn-outline-dark my-5" %>

</div>